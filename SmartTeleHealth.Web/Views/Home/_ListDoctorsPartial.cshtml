@model IEnumerable<SmartTeleHealth.Web.Models.HomeDoctorViewModel>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Comments</th>
                <th>Evaluation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>
                        <div>
                            <strong>
                                @Html.ActionLink(doctor.FullName, "Get", "Doctor", new { id = doctor.Id }, null)
                            </strong>
                            <small>
                                @if (doctor.City != null)
                                {
                                    @Html.ActionLink(doctor.City.CityName, "SearchBest", "Home",
                                    new { search = doctor.City.CityName }, null)
                                }
                            </small>
                        </div>
                        @if (doctor.Speciality != null)
                        {
                            <div>@Html.ActionLink(doctor.Speciality.Name, "Get", "Specialities", new { id = doctor.Speciality.Id }, null)</div>
                        }
                        else
                        {
                            <div>No Information</div>
                        }
                    </td>
                    <td>@doctor.CommentsCount</td>
                    <td>@doctor.Rating</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="text-center"><strong>NO INFORMATION AVAIABLE</strong></h3>
    </div>
}

